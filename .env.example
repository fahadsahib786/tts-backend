# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tts-platform
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/tts-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=tts-audio-files

# Email Configuration (Gmail SMTP)
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_PASS=your-gmail-app-password
# Note: Use App Password for Gmail, not your regular password
# Generate App Password: https://support.google.com/accounts/answer/185833

# Alternative Email Configuration (for other SMTP providers)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-email-password

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_WINDOW=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cleanup Configuration
CLEANUP_INTERVAL_HOURS=24
FILE_RETENTION_DAYS=90

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_EMAIL=superadmin@yourdomain.com

# Subscription Configuration
DEFAULT_PLAN_ID=basic-plan-id
TRIAL_PERIOD_DAYS=7

# TTS Configuration
DEFAULT_VOICE_ID=Joanna
MAX_TEXT_LENGTH=3000
PREVIEW_TEXT_LENGTH=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Payment Configuration (for future use)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Redis Configuration (optional, for caching and rate limiting)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Monitoring and Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Development Configuration
DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# ENABLE_CORS=false
# CORS_ORIGIN=https://yourdomain.com
